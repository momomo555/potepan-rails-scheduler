<main>
  <h3>スケジュール詳細</h3>

  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @schedule.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @schedule.start.to_s(:date_jp) if !@schedule.start.nil? %></td>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @schedule.created_at.to_s(:date_jp) if !@schedule.created_at.nil? %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><%= @schedule.is_whole_day  == true ? "○" : "" %></td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= safe_join(@schedule.memo.split("\n"),tag(:br)) %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= link_to "スケジュール情報一覧に戻る", :schedules %></li>
      <li><%= link_to "スケジュールを編集する", [:edit, @schedule] %></li>
      <li><%= link_to "スケジュールを削除", @schedule, method: :delete, data: { confirm: "削除しても良いですか？" } %></li>
    </ul>
  </div>
</main>